  </footer>  <script>
    // Simulated sensor & mission data (demo-purpose)
    const sensorsEl = document.getElementById('sensors');
    const statusEl = document.getElementById('status');
    const samplesEl = document.getElementById('samples');
    const tempEl = document.getElementById('temp');
    const phEl = document.getElementById('ph');
    const visEl = document.getElementById('vis');

    let samples = 0;
    function updateDemo(){
      const t = (18 + Math.random()*6).toFixed(1);
      const ph = (7.8 + (Math.random()-0.5)*0.6).toFixed(2);
      const vis = (2 + Math.random()*8).toFixed(1);
      tempEl.textContent = t + ' °C';
      phEl.textContent = ph;
      visEl.textContent = vis + ' m';

      sensorsEl.textContent = Temp: ${t} °C · pH: ${ph} · Visibility: ${vis} m;

      // mission status progress
      const states = ['Initialising sensors','Navigating transect','Collecting images','Uploading data','Awaiting orders'];
      statusEl.textContent = states[Math.floor(Date.now()/4000)%states.length];

      // occasionally detect organism
      if(Math.random() < 0.35){ samples += Math.floor(Math.random()*3); samplesEl.textContent = samples + ' organisms catalogued'; }
    }
    setInterval(updateDemo,1800); updateDemo();

    // Accessibility: pause animation on reduced-motion
    const prefersReduced = window.matchMedia('(prefers-reduced-motion: reduce)');
    if(prefersReduced.matches){ document.getElementById('drone').classList.remove('fly'); }
  </script></body>
